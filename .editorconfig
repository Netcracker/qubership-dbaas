root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Trailing whitespace is important in Markdown (they distinguish a new line from a new paragraph)
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 4

[*.sh]
indent_size = 4
end_of_line = lf

[{*.yaml,*.yml}]
indent_size = 2