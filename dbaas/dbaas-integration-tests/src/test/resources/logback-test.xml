<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSS}] [%-5p] [request_id=%X{requestId}] [%t] [%c{1}] %m%n</pattern>
        </encoder>
    </appender>
    <logger name="com.netcracker.cloud" level="ERROR"/>
    <logger name="com.netcracker.it" level="DEBUG"/>
    <logger name="com.netcracker.cloud.junit.cloudcore" level="DEBUG"/>
    <!--<logger name="org.springframework.beans" level="TRACE"/>-->
    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>